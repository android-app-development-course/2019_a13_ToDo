<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MeActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="468dp"
        android:layout_height="195dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bgtouxiang" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/home_listview_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"

        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/touxiang2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="UserName"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/home_listview_logo"
        app:layout_constraintTop_toBottomOf="@+id/home_listview_logo" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:text="共专注 0 天"
        android:background="#F0EBB9"
        android:textColor="#FCEB6209"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/home_listview_logo"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        android:background="#F0EBB9"
        android:text="已连续专注 0 天"
        android:textColor="#FCEB6209"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/home_listview_logo"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />


    <ListView
        android:id="@+id/listView2"
        android:layout_width="405dp"
        android:layout_height="392dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"></ListView>

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:text="退出登录"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>